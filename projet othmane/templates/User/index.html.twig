    <br><h1 style="text-align : center " >Bienvenu {{admin.nomComplet}}</h1><br><br>

    <table class="table">
        <thead>
            <tr>
                <th>Matricule</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.matricule }}</td>
                <td>{{ user.nomComplet }}</td>
                <td>{{ user.email }}</td>
                {% for role in user.roles %}
                <td>{{ role }}</td>
                {% endfor %}
                <td>
                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info" role="button"> Show</a>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-info" role="button">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('security.register') }}"  class="btn btn-outline-success" role="button">Create new</a>
