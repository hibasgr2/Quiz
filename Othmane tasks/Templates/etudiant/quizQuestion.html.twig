{% extends 'base.html.twig' %}
{% block title %}Liste Courses!{% endblock %}
{% block body %}
<div class="container">
    {% for course in courses %}
        <div class="card m-5 mt-5">
            <div class="card-header">
                {{ course.question }}
            </div>
            <div class="card-body">
                {% for i in course.reponses %}
                    <input type="radio" value="{{i}}" name="reponse"> {{i}} <br/>
                {% endfor %}           
            </div>
            <div class="card-footer">
                <p>1 Point </p>
            </div>
        </div>
    {% endfor %}
    <div class="d-flex justify-content-end">
        <a href="{{ path('courses.acceuil') }}" class="btn btn-primary mx-3">Retour A L'acceuil</a>
        <a href="{{ path('acceuil.note') }}" class="btn btn-danger">Sauvegarder Mes Soumissions </a>
    </div>
</div>
{% endblock %}

